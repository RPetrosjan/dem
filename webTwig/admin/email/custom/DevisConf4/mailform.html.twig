        {% for numero in telephone %}
            {% set TelFix = TelFix ~ numero ~ ' / ' %}
        {% endfor %}
    {% elseif type == 'portable' %}
        {% for numero in telephone %}
            {% set TelPort = TelPort ~ numero ~ ' / ' %}
        {% endfor %}
    {% endif %}
{% endfor %}

